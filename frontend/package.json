{
  "name": "eezy-receipt-frontend",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "format": "npx prettier -c './**/*.{js,ts,jsx,tsx}'",
    "format:fix": "npx prettier -w './**/*.{js,ts,jsx,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mobile": "jest --selectProjects mobile",
    "test:mobile:watch": "jest --selectProjects mobile --watch",
    "test:mobile:coverage": "jest --selectProjects mobile --coverage",
    "test:web": "jest --selectProjects web",
    "test:web:watch": "jest --selectProjects mobile --watch",
    "test:web:coverage": "jest --selectProjects mobile --coverage",
    "test:shared": "jest --selectProjects shared",
    "test:shared:watch": "jest --selectProjects mobile --watch",
    "test:shared:coverage": "jest --selectProjects mobile --coverage",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "apps/mobile/**/*.{js,jsx,ts,tsx}": [
      "npm run lint -w apps/mobile"
    ],
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "npm run lint -w apps/web"
    ],
    "shared/**/*.{js,jsx,ts,tsx}": [
      "npm run lint -w shared"
    ],
    "**/*.{js,jsx,ts,tsx,css,scss,md}": [
      "npx prettier --write"
    ]
  },
  "workspaces": [
    "shared",
    "apps/*"
  ],
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.0",
    "@types/react-native": "^0.73.0",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-expo": "^54.0.17",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  }
}
