{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020",
    ],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "shared/src/*"
      ],
    },
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "files": [],
  "references": [
    {
      "path": "./shared"
    },
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/mobile"
    }
  ]
}
