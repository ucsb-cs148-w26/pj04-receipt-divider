{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "composite": true,
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@shared/*": [
        "../../shared/src/*",
      ],
      "@styles/*": [
        "../../shared/styles/*"
      ]
    },
    // Vite specific
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // Better DX
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/vite-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "jest.setup.ts"
  ],
  "references": [
    {
      "path": "../../shared"
    }
  ],
  "files": []
}
