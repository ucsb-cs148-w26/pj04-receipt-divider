{
  "extends": [
    "../../tsconfig.json",
    "expo/tsconfig.base"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@shared/*": [
        "../../shared/src/*",
      ],
      "@styles/*": [
        "../../shared/styles/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "../web/jest.config.ts",
    "jest.setup.ts"
  ]
}
